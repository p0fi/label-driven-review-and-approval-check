{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "files": {
    "ignore": [
      "dist",
      "node_modules",
      "*.d.ts",
      ".ncc-cache",
      "coverage"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 110,
    "quoteStyle": "double",
    "semicolons": "asNeeded"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "noNonNullAssertion": "warn",
        "useTemplate": "error",
        "noParameterAssign": "error",
        "noVar": "error",
        "useNamingConvention": "off",
        "noUselessElse": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noDuplicateImports": "error",
        "noConstantCondition": "error"
      },
      "suspicious": {
        "noDuplicateKeysInObject": "error",
        "noShadowRestrictedNames": "error",
        "noArrayIndexKey": "off"
      },
      "performance": {
        "noDelete": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "nursery": {
        "noAwaitInLoop": "off"
      }
    }
  },
  "overrides": [
    {
      "include": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "useShorthandArrayType": "warn",
            "noNonNullAssertion": "warn"
          },
          "correctness": {
            "noUnusedVariables": "warn"
          }
        }
      }
    },
    {
      "include": [
        "**/__tests__/**",
        "**/*.test.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
